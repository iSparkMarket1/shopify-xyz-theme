{% schema %}
{
  "name": "Custom Banner",
  "tag": "section",
  "class": "custom-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

<div class="custom-banner">
  <h1>{{ section.settings.heading }}</h1>
</div>
