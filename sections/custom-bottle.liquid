{% schema %}
{
  "name": "Custom Bottle Section",
  "tag": "section",
  "class": "custom-bottle-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Introducing Our Custom Bottle"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "This bottle is eco-friendly, durable, and stylish. Perfect for everyday use."
    },
    {
      "type": "image_picker",
      "id": "bottle_image",
      "label": "Bottle Image"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Custom Bottle Section",
      "category": "Product"
    }
  ]
}
{% endschema %}

<div class="page-width py-12 bg-white">
  <div class="max-w-6xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 items-center gap-10">
    <div>
      {% if section.settings.bottle_image != blank %}
        <img src="{{ section.settings.bottle_image | img_url: '600x600' }}" alt="Bottle" class="rounded-xl shadow-md w-full">
        <p class="bottle-text ji-hello-custom hello-bottle">Hello custom bottle</p>
      {% endif %}
    </div>
    <div>
      <h2 class="text-3xl font-bold mb-4">{{ section.settings.heading }}</h2>
      <p class="text-gray-700 mb-6">{{ section.settings.description }}</p>
      {% if section.settings.button_link != blank and section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="inline-block bg-black text-white px-6 py-3 rounded-full hover:bg-gray-800 transition">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>
